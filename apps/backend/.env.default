# ============================================
# Server Configuration
# ============================================
PORT=3001
NODE_ENV=development

# ============================================
# MongoDB Configuration
# ============================================
MONGODB_URI=mongodb://localhost:27017/threads-post-scheduler

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# Threads API Configuration
# ============================================
THREADS_CLIENT_ID=
THREADS_CLIENT_SECRET=
THREADS_REDIRECT_URI=http://localhost:3001/api/credentials/callback
THREADS_USER_ID=
THREADS_ACCESS_TOKEN=
THREADS_REFRESH_TOKEN=
THREADS_API_VERSION=v1.0

# ============================================
# Application Settings
# ============================================
TZ=Asia/Ho_Chi_Minh
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
DUPLICATION_WINDOW_HOURS=24      # Time window for duplicate detection (default: 24h)
EXECUTION_LOCK_TIMEOUT_MS=300000 # Lock timeout (default: 5 min)
COMMENT_MAX_RETRIES=3            # Max comment retry attempts
USE_EVENT_DRIVEN_SCHEDULER=true
SCHEDULER_BATCH_WINDOW_MS=5000  # Optional, default 5000ms

# ============================================
# Logging
# ============================================
LOG_LEVEL=info

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN=http://localhost:5173

# ============================================
# Job Queue Configuration
# ============================================
WORKER_CONCURRENCY=5
JOB_TIMEOUT=30000

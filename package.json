{
  "name": "thread-auto-post-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:backend": "cd apps/backend && npm run dev",
    "dev:worker": "cd apps/backend && npm run worker",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "install:all": "npm install && cd apps/frontend && npm install && cd ../backend && npm install"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "vitest": "^4.0.16"
  },
  "workspaces": [
    "apps/*"
  ],
  "packageManager": "npm@10.9.2"
}
